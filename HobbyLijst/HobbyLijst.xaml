<Window x:Class="HobbyLijst.HobbyLijstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HobbyLijst"
        mc:Ignorable="d"
        Title="HobbyLijst" Height="400" Width="525" Loaded="Window_Loaded">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <Label>Categorie:</Label>
            <ComboBox Name="ComboBoxCategorie" Width="200" HorizontalAlignment="Left"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 20">
            <ListBox Name="ListBoxHobbies" Height="100" Width="300" Margin="10 0"></ListBox>
            <Button Name="ButtonKies" Width="150" Height="20" VerticalAlignment="Top" Margin="10" Content="Kies"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <ListBox Name="ListBoxGekozen" Height="100" Width="300" Margin="10 0"></ListBox>
            <Button Name="ButtonVerwijderen" Height="20" Width="150" VerticalAlignment="Top" Margin="10" Content="Verwijderen"></Button>
        </StackPanel>
    </StackPanel>
</Window>